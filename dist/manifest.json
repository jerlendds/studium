{
  "version": "1.0.0",
  "manifest_version": 2,
  "name": "Studium",
  "homepage_url": "http://localhost:8080/",
  "description": "retain, recall, and start remembering information and ideas from your websites",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/logo.svg",
    "48": "icons/logo.svg",
    "128": "icons/logo.svg"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Studium",
    "default_icon": {
      "19": "icons/logo.svg",
      "38": "icons/logo.svg"
    }
  },
  "sidebar_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "Studium",
    "default_panel": "sidebar/sidebar.html"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "chrome_url_overrides": {
    "newtab": "override.html"
  },
  "content_security_policy": "script-src 'self' ; object-src 'self'"
}