{
	"name": "Net Notes",
	"version": "0.0.1",
	"description": "Collect and use information and ideas from the internet, efficiently.",
	"homepage_url": "https://github.com/jerlendds/netnotes",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "net-notes@jerlendds.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "notes.svg"
	},
	"permissions": [
		"storage",
		"activeTab",
		"contextMenus"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "notes.svg"
	},
	"sidebar_action": {
		"default_title": "My sidebar",
		"default_panel": "sidebar/sidebar.html",
		"default_icon": "notes.svg"
	}
}